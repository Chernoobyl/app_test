<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.AppGesuas" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:breakStrategy" tools:targetApi="m">simple</item>
        <item name="android:statusBarColor">@color/bg_blue</item>
    </style>

    <style name="Theme.AppGesuas" parent="Base.Theme.AppGesuas">

    </style>

    <style name="BottomSheetDialogFragmentNoBackground" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="EditTextDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:backgroundTint">@color/bg_blue</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="EditTextMultiLines">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:gravity">top|start</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text|textMultiLine</item>
        <item name="android:lines">8</item>
        <item name="android:maxLines">8</item>
        <item name="android:minLines">8</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextViewDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:textColor">@color/text_edit_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextViewDefault.TextColorBlack">
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="TextViewDefault.TextColorGray">
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="TextViewTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextViewItemForwarder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonDefault">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/bg_btn_default</item>
        <item name="backgroundTint">@color/bg_blue</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHighlight">@color/bg_blue</item>
        <item name="android:textColorLink">@color/bg_blue</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonCancel">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/bg_btn_cancel</item>
        <item name="backgroundTint">@color/bg_blue</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/bg_blue</item>
        <item name="android:textColorHighlight">@color/bg_blue</item>
        <item name="android:textColorLink">@color/bg_blue</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonFullWidth">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/bg_btn_cancel</item>
        <item name="backgroundTint">@color/bg_blue</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/bg_blue</item>
        <item name="android:textColorHighlight">@color/bg_blue</item>
        <item name="android:textColorLink">@color/bg_blue</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RadioGroupDefault">
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:inputType">text</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="RadioButtonDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@drawable/selector_radio</item>
        <item name="android:buttonTint">@color/bg_blue</item>
        <item name="buttonTint">@color/bg_blue</item>
        <item name="android:checked">false</item>
        <item name="android:layoutDirection">rtl</item>
    </style>

</resources>
